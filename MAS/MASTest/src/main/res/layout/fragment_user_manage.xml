<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Users"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <ListView
                android:id="@+id/user_list"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="@dimen/margin_med"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groups"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <ListView
                android:id="@+id/group_list"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="@dimen/margin_med"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/user_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_med"
            android:text="userName"/>

        <EditText
            android:id="@+id/profile_url_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_med"
            android:text="Url"/>


        <EditText
            android:id="@+id/user_type_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_med"
            android:text="Type"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
            android:id="@+id/language_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_med"
            android:text="us_en"/>

        <EditText
            android:id="@+id/locale_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_med"
            android:text="en_US.UTF-8"/>

        <EditText
            android:id="@+id/time_zone_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_med"
            android:text="PST"/>

        <CheckBox
            android:id="@+id/is_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/address_dialog"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="Address"/>

        <Button
            android:id="@+id/email_dialog"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="E-mail"/>

        <Button
            android:id="@+id/phone_dialog"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="Phone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="Create"/>

        <Button
            android:id="@+id/update_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="Update"/>

        <Button
            android:id="@+id/delete_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="Delete"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/remove_group_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Group"/>

        <Button
            android:id="@+id/add_group_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Add Group"/>

    </LinearLayout>

</LinearLayout>
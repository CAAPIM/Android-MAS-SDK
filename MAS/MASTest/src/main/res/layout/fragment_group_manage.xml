<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_med">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groups"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <ListView
                android:id="@+id/group_list"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_margin="@dimen/margin_med"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Users"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <ListView
                android:id="@+id/user_list"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_margin="@dimen/margin_med"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="Display Name"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:hint="Enter a name for this group..."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner"
        android:textSize="13sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/owner_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:hint="Enter the owner's MASUser Id..."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/members_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:hint="Select from user's list"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create_button"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_narrow_height"
            android:textSize="@dimen/button_small_text"
            android:text="Create"/>

        <Button
            android:id="@+id/read_button"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_narrow_height"
            android:textSize="@dimen/button_small_text"
            android:text="Read"/>

        <Button
            android:id="@+id/update_button"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_narrow_height"
            android:textSize="@dimen/button_small_text"
            android:text="Update"/>

        <Button
            android:id="@+id/delete_button"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_narrow_height"
            android:textSize="@dimen/button_small_text"
            android:text="Delete"/>

        <Button
            android:id="@+id/add_user_button"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_narrow_height"
            android:textSize="@dimen/button_small_text"
            android:text="Add"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/remove_user_button"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_narrow_height"
            android:textSize="@dimen/button_small_text"
            android:text="Remove"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Query By"/>
        <Button
            android:id="@+id/by_name_button"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_narrow_height"
            android:textSize="@dimen/button_small_text"
            android:text="Name"/>

        <Button
            android:id="@+id/by_owner_button"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_narrow_height"
            android:textSize="@dimen/button_small_text"
            android:text="Owner"/>

        <Button
            android:id="@+id/by_member_button"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_narrow_height"
            android:textSize="@dimen/button_small_text"
            android:text="Member"/>
        </LinearLayout>
</LinearLayout>